extends layout

block content
    .header
        nav
            .nav-wrapper
               a.brand-logo(href='#') Image&nbsp;Compressor

    .content
        .drop-zone
            .center
                span.display-block DROP IMAGE HERE OR
                a.display-block.waves-effect.waves-light.blue.btn select from disk
                input#fake-button(type="file", accept=".jpg,.jpeg,.png")
        .work-zone.hidden
            .half.left-img
                .center
                    canvas#left-canvas
            .half.right-img
                .center
                    canvas#right-canvas